@using Microsoft.AspNetCore.Identity
@using DynamicEcommerce.Data.Models
@model DynamicEcommerce.Models.ApplicationUser.ProfileModel

@inject UserManager<ApplicationUser> UserManager

<div class="container">
    <div class="row">
        <h1>User Profile</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                @Model.Username
                @if (Model.IsEmployee)
                {
                    <span class="badge badge-primary ml-2">Employee</span>
                }
            </p>
        </div>
    </div>
</div>